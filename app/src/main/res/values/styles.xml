<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_header">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="second_header">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="bold_text">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">@color/soft_grey
        </item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/soft_grey
        </item>
    </style>


    <style name="sub_header">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/soft_grey
        </item>
    </style>

    <style name="card_text">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>


    <style name="button_main" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">16dp</item>
    </style>


</resources>