<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />


    <ImageView
        android:id="@+id/gpsID"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_baseline_gps_fixed_24" />

    <RelativeLayout
        android:id="@+id/rlBottomSheet"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:clipToPadding="false"
        android:layout_alignParentBottom="true"
        android:background="@drawable/soft_black_border">


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/dark_black">

            <TextView
                android:id="@+id/tvTitleBottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Soccer at Kendall"
                android:textAppearance="@style/main_header" />


            <TextView
                android:id="@+id/tvPlaceBottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleBottomSheet"
                android:layout_marginStart="8dp"
                android:text="Nothing"
                android:textAppearance="@style/bold_text" />

            <TextView
                android:id="@+id/tvTimeExpectedBottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvPlaceBottomSheet"
                android:layout_below="@+id/tvTitleBottomSheet"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:textAlignment="textEnd"
                android:textAppearance="@style/bold_text"
                android:text="loading..." />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_below="@+id/rl1"
            android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llDirectionBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/custom_ripple"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_direction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/text"
                android:text="Directions" />


        </LinearLayout>

            <LinearLayout
                android:id="@+id/llWebsiteBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                android:padding="8dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_internet" />

                <TextView
                    android:textAppearance="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Website" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeeEventBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                android:padding="8dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_calendar" />

                <TextView
                    android:textAppearance="@style/text"
                    android:id="@+id/tvLocationHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="See Event" />


            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>