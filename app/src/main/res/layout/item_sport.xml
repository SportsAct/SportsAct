<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:padding="8dp"
    android:layout_marginHorizontal="7dp"
    android:layout_width="110dp"
    android:background="@drawable/sport_item_unselected"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSportImageItemSport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@drawable/group" />

    <TextView
        android:id="@+id/tvSportNameItemSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSportImageItemSport"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/card_text"
        tools:text="Football" />

</RelativeLayout>