<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black"
    tools:context=".activities.CreateEventActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

    <include
        android:id="@+id/tbToolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBarCreatingEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminate="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/second_header"
            android:text="Title:" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/soft_black_border">

        <ImageView
            android:id="@+id/dmy_iv_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginVertical="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_trophy" />

        <EditText
            android:id="@+id/etEventTitleCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dmy_iv_icon"
            android:layout_marginVertical="8dp"
            android:hint="@string/enter_event_title"
            android:inputType="textShortMessage"
            android:maxLength="25"
            android:maxLines="1"
            android:textColor="@color/soft_grey"
            android:outlineProvider="none"
            app:backgroundTint="@color/soft_black"
            android:textColorHint="@color/grey"
            android:layout_marginHorizontal="8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvTitleMaxCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textAppearance="@style/soft_et_text"
            android:layout_alignEnd="@+id/etEventTitleCreateEvent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            tools:text="25" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <Switch
        android:id="@+id/swtPrivacyCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:padding="8dp"
        android:textColor="@color/soft_grey"
        android:textSize="16sp"
        android:trackTint="@color/grey"
        android:theme="@style/SwitchTheme"
        android:layout_toStartOf="@+id/switchTextCreateEvent"
        android:text="Select Your Game Privacy:"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/switchTextCreateEvent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/text"
        android:layout_marginStart="4dp"
        android:text="Private" />

</RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/middle_black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/second_header"
            android:text="Select Sport:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSaveSportPreferencesAccountFragment"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/middle_black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:text="Location:"
            android:textAppearance="@style/second_header" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/soft_black_border">

        <LinearLayout
            android:id="@+id/btnLocationCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:background="@drawable/custom_ripple"
            android:orientation="horizontal">


            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/grey"
                app:srcCompat="@drawable/ic_location" />

            <TextView
                android:id="@+id/tvLocationCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/soft_et_text"
                android:text="Select the location of the event" />

        </LinearLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/middle_black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/second_header"
        android:text="Date and Time:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ivCalendarCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/tvSelectedDateCreateEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/text"
                    android:text="Select a Date."/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ivTimePickerCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_time_circle" />

                <TextView
                    android:id="@+id/tvTimeSelectedCreateEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/text"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"
                    android:text="Select a Time."/>
            </LinearLayout>

        </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
        android:layout_marginTop="16dp"
            android:background="@color/middle_black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/second_header"
            android:text="How Many Participants:" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/soft_black_border">


            <ImageView
                android:id="@+id/dmyTVParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingHorizontal="8dp"
                app:tint="@color/grey"
                app:srcCompat="@drawable/ic_account_empty" />



            <com.google.android.material.slider.Slider
                android:id="@+id/sbChooseParticipants"
                android:valueFrom="2"
                android:valueTo="64"
                android:value="2"
                android:stepSize="1"
                android:paddingVertical="16dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tvParticipantsNumberCreate"
                android:layout_toEndOf="@+id/dmyTVParticipants"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/tvParticipantsNumberCreate"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/soft_et_text"
                android:text="2" />

        </RelativeLayout>

        <android.widget.Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="16dp"
            android:text="Create Event" />


    </LinearLayout>

</ScrollView>