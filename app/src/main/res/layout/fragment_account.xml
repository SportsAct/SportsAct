<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">





    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="63dp"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/nameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="17dp"
        android:layout_toEndOf="@+id/profilePic"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/bioTextId"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/profilePic"
        android:text="I love playing basketball and football on the weekends in Bayfront Park. Let me know if you're free on the weekends!"
        tools:text="I love playing basketball and football on the weekends in Bayfront Park. Let me know if you're free on the weekends!" />

    <Button
        android:id="@+id/takePicId"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="19dp"
        android:text="Upload"
        tools:text="Upload" />

    <Button
        android:id="@+id/addFriendId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="87dp"
        android:text="Add Friends" />

    <Button
        android:id="@+id/manageEventsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="87dp"
        android:layout_toEndOf="@+id/addFriendId"
        android:text="Manage Events" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="346dp"
        android:layout_height="183dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="117dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/scrollLin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <ImageView
                    android:id="@+id/basketballId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/basketball" />

                <ImageView
                    android:id="@+id/baseballId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/baseball" />

                <ImageView
                    android:id="@+id/cyclingId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/cycling" />

                <ImageView
                    android:id="@+id/footballId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/football" />

                <ImageView
                    android:id="@+id/iceHockeyId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/icehockey" />

                <ImageView
                    android:id="@+id/pingPongId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/pingpong" />

                <ImageView
                    android:id="@+id/badmintonId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/badminton" />

                <ImageView
                    android:id="@+id/golfballId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/golfball" />

                <ImageView
                    android:id="@+id/soccerBallId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/soccerball" />

                <ImageView
                    android:id="@+id/tennisballId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/tennisball" />

                <ImageView
                    android:id="@+id/vollyballId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/volleyball" />


            </LinearLayout>
        </HorizontalScrollView>


    </ScrollView>


