<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:background="@drawable/soft_black_border"
   >


    <LinearLayout
        android:id="@+id/dmyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shape="ring"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="75dp">

        <ImageView
            android:id="@+id/ivParticipantUserItemRequest"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/empty_profile" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="?attr/listPreferredItemPaddingLeft"
        android:paddingEnd="?attr/listPreferredItemPaddingRight"
        android:background="@drawable/custom_ripple"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserNameUserItemRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/bold_text"
            tools:text="erikfors" />

        <TextView
            android:id="@+id/tvActualNameUserItemRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            android:textAppearance="@style/text"
            android:text="Erik Fors"
            />

    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <android.widget.Button
            android:id="@+id/btnAcceptFriendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingVertical="4dp"
            android:paddingHorizontal="6dp"
            android:textStyle="normal"
            android:lines="1"
            android:layout_toStartOf="@+id/btnCancelFriendRequest"
            android:text="Accept" />


        <ImageButton
            android:id="@+id/btnCancelFriendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="4dp"
            android:padding="8dp"
            android:background="@drawable/custom_ripple"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/unit_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignLeft="@+id/dmyLayout"
        android:layout_alignRight="@+id/dmyLayout"
        android:layout_alignTop="@+id/dmyLayout"
        android:layout_alignBottom="@+id/dmyLayout"
        android:background="@drawable/gradiant_border" >

        <TextView
            android:id="@+id/dmyTvFriendAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/main_header"
            android:text="Friend Added!"/>

        <ImageView
            android:id="@+id/ivCheckMarkFriendAdded"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/dmyTvFriendAdded"
            android:visibility="visible"
            app:srcCompat="@drawable/animated_check" />

    </RelativeLayout>

</RelativeLayout>